{
  "name": "desktop-starter-app",
  "productName": "Desktop Starter App",
  "version": "1.0.2",
  "description": "Production-ready Electron + React + TypeScript desktop app template with auto-updates, SQLite database, and cross-platform builds",
  "main": ".vite/build/main.js",
  "scripts": {
    "dev": "electron-forge start",
    "start": "npm run clean && electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "clean": "rm -rf out .webpack .vite",
    "version:patch": "npm version patch && git push --follow-tags",
    "version:minor": "npm version minor && git push --follow-tags",
    "version:major": "npm version major && git push --follow-tags"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "desktop-app",
    "template",
    "starter",
    "boilerplate"
  ],
  "author": {
    "name": "YOUR_NAME",
    "email": "your@email.com"
  },
  "homepage": "https://github.com/dotnetfactory/desktop-starter-app",
  "license": "MIT",
